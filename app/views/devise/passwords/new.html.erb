<header>
  <h2><%= t("accounts.forgot_password") %></h2>
  <small>
    <%= t("accounts.or") %>
    <%= link_to t("accounts.log_in"), new_user_session_path %>
  </small>
</header>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <section class="floating-label field">
    <%= f.email_field :email, autofocus: true %>
    <%= f.label :email %>
  </section>

  <%= f.button t("accounts.send_instructions") %>
<% end %>
