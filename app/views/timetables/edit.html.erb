<div class="timetable-editor">
  <%= hidden_field_tag :event_id, @timetable.event.slug %>
  <aside>
    <header>
      <%= popup_menu "", rel: "activity-type" do %>
        <ul class="types"></ul>
        <ul>
          <li><a href="#" rel="new-activity-type"><%= t("timetable.new.activity_type") %></a></li>
        </ul>
      <% end -%>
    </header>
    <div class="activity-list"></div>
  </aside>

  <div class="timetable"></div>

  <div class="floating-action-button">
    <button><%= icon :add %></button>
    <%= action_list do -%>
      <%= action_list_item t("dialog.cancel"), "#", :cancel, rel: "cancel" %>
    <% end -%>
  </div>
</div>
